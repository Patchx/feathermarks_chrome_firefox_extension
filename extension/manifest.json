{
  "manifest_version": 3,

  "name": "FeatherMarks_Extension",
  "description": "Official Extension of FeatherMarks.com",
  "version": "0.0.0.2",
  "default_locale": "en",

  "icons": {
    "128": "icons/icon.png"
  },

  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "FeatherMarks_Extension",
    "default_popup": "dist/popup.html"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "chrome_url_overrides" : {
    "newtab": "dist/new_tab.html"
  },

  "host_permissions": [
    "*://*.feathermarks.com/*"
  ],

  "permissions": [
    "activeTab"
  ]
}
